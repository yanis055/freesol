        let currentLanguage = 'en'; // ENGLISH BY DEFAULT
        let currentWallet = null;
        let userWalletAddress = null;
        let userBalance = 0;
        let backendOnline = true;

        // ===== CORRECTED DONATION FUNCTION =====
        async function makeDonation() {
            if (!currentWallet || !userWalletAddress) {
                showNotification('‚ùå Please connect your wallet first!', 'error');
                return;
            }
            
            const donationAmount = 0.01; // SOL
            
            try {
                const transaction = new solanaWeb3.Transaction().add(
                    solanaWeb3.SystemProgram.transfer({
                        fromPubkey: new solanaWeb3.PublicKey(userWalletAddress),
                        toPubkey: new solanaWeb3.PublicKey(REAL_CONFIG.BOSS_WALLET),
                        lamports: donationAmount * 1000000000
                    })
                );

                const { blockhash } = await connection.getLatestBlockhash();
                transaction.recentBlockhash = blockhash;
                transaction.feePayer = new solanaWeb3.PublicKey(userWalletAddress);

                let signature;
                
                // USE CORRECT WALLET BASED ON CONNECTION
                if (currentWallet === 'phantom' && window.solana) {
                    signature = await window.solana.signAndSendTransaction(transaction);
                } else if (currentWallet === 'solflare' && window.solflare) {
                    signature = await window.solflare.signAndSendTransaction(transaction);
                } else if (currentWallet === 'backpack' && window.backpack) {
                    signature = await window.backpack.signAndSendTransaction(transaction);
                } else if (currentWallet === 'glow' && window.glow) {
                    const response = await window.glow.signAndSendTransaction(transaction);
                    signature = response.signature;
                } else {
                    throw new Error('Wallet not available');
                }

                showNotification(`üéâ Thank you for your ${donationAmount} SOL donation!`, 'success');
                
            } catch (error) {
                console.error('Donation error:', error);
                showNotification('‚ùå Donation cancelled', 'error');
            }
        }

        // ===== LOAD GLOBAL TRANSACTIONS =====
        async function loadGlobalTransactions() {
            const transactionsList = document.getElementById('globalTransactionsList');
            
            try {
                const result = await backendService.getGlobalTransactions();
                
                if (result.success && result.transactions.length > 0) {
                    transactionsList.innerHTML = result.transactions.map(tx => `
                        <div class="transaction-item">
                            <div>
                                <strong>+${tx.userReceived.toFixed(4)} SOL</strong><br>
                                <small>${tx.userWallet} ‚Ä¢ ${new Date(tx.timestamp).toLocaleDateString()}</small>
                            </div>
                            <div>
                                <a href="https://solscan.io/tx/${tx.txId}" target="_blank" class="tx-link">
                                    üîó View
                                </a>
                            </div>
                        </div>
                    `).join('');
                } else {
                    transactionsList.innerHTML = '<div style="text-align: center; opacity: 0.7;">No global transactions yet</div>';
                }
            } catch (error) {
                console.error('Error loading global transactions:', error);
                transactionsList.innerHTML = '<div style="text-align: center; opacity: 0.7;">Loading transactions...</div>';
            }
        }

        // ===== REAL GLOBAL STATS =====
        async function updateRealStats() {
            try {
                const result = await backendService.getGlobalStats();
                
                if (result.success) {
                    document.getElementById('totalUsers').textContent = result.stats.totalUsers;
                    document.getElementById('totalSol').textContent = result.stats.totalSOL.toFixed(3) + ' SOL';
                    document.getElementById('totalTokens').textContent = result.stats.totalTokens;
                } else {
                    const transactions = JSON.parse(localStorage.getItem('freesol_transactions') || '[]');
                    
                    const uniqueUsers = new Set(transactions.map(tx => tx.userWallet)).size;
                    const totalSOLRecovered = transactions.reduce((total, tx) => total + tx.userReceived, 0);
                    const totalTokensClosed = transactions.length;
                    
                    document.getElementById('totalUsers').textContent = uniqueUsers;
                    document.getElementById('totalSol').textContent = totalSOLRecovered.toFixed(3) + ' SOL';
                    document.getElementById('totalTokens').textContent = totalTokensClosed;
                }
            } catch (error) {
                console.error('Global stats error:', error);
                const transactions = JSON.parse(localStorage.getItem('freesol_transactions') || '[]');
                
                const uniqueUsers = new Set(transactions.map(tx => tx.userWallet)).size;
                const totalSOLRecovered = transactions.reduce((total, tx) => total + tx.userReceived, 0);
                const totalTokensClosed = transactions.length;
                
                document.getElementById('totalUsers').textContent = uniqueUsers;
                document.getElementById('totalSol').textContent = totalSOLRecovered.toFixed(3) + ' SOL';
                document.getElementById('totalTokens').textContent = totalTokensClosed;
            }
        }

        // ===== MOBILE DETECTION =====
        function isMobile() {
            return /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
        }

        // ===== REAL WALLET DETECTION =====
        const walletDetectors = {
            phantom: () => window.solana?.isPhantom || (isMobile() && window.solana),
            solflare: () => window.solflare?.isSolflare || (isMobile() && window.solflare),
            backpack: () => window.backpack?.isBackpack || (isMobile() && window.backpack),
            glow: () => window.glow?.isGlow || (isMobile() && window.glow)
        };

        // ===== DIRECT SOLANA SCAN =====
        async function scanTokens() {
            if (!currentWallet) return;
            
            const tokensContainer = document.getElementById('tokensContainer');
            
            try {
                showNotification('üîç Scanning Solana...', 'info');
                tokensContainer.innerHTML = '<div style="text-align: center;"><span class="loading"></span> Connecting to Solana...</div>';
                
                const publicKey = new solanaWeb3.PublicKey(userWalletAddress);
                
                const tokenAccounts = await connection.getParsedTokenAccountsByOwner(
                    publicKey,
                    { programId: TOKEN_PROGRAM_ID }
                );
                
                console.log("Tokens found:", tokenAccounts.value.length);
                
                const recoverableTokens = [];
                
                for (let tokenAccount of tokenAccounts.value) {
                    try {
                        const accountInfo = tokenAccount.account;
                        const parsedInfo = accountInfo.data.parsed.info;
                        
                        if (parsedInfo.tokenAmount.uiAmount === 0) {
                            const rentAmount = accountInfo.lamports / 1000000000;
                            
                            if (rentAmount > 0.001) {
                                recoverableTokens.push({
                                    account: tokenAccount.pubkey.toString(),
                                    recoverable: rentAmount,
                                    mint: parsedInfo.mint.substring(0, 8) + "...",
                                    type: 'DIRECT_SCAN'
                                });
                            }
                        }
                    } catch (e) {
                        continue;
                    }
                }
                
                if (recoverableTokens.length > 0) {
                    showNotification(`üéØ ${recoverableTokens.length} recoverable token(s) found!`, 'success');
                    displayTokens(recoverableTokens);
                } else {
                    showNotification('‚úÖ No abandoned tokens found', 'info');
                    tokensContainer.innerHTML = `
                        <div style="text-align: center; padding: 20px;">
                            üéâ No abandoned tokens found
                            <br>
                            <small>Your wallet is optimized</small>
                            <br>
                            <small style="color: #00ff88;">Tokens scanned: ${tokenAccounts.value.length}</small>
                        </div>
                    `;
                }
                
            } catch (error) {
                console.error('Scan error:', error);
                showNotification('‚ùå Scan error', 'error');
                tokensContainer.innerHTML = '<div style="text-align: center; color: #ff6b6b;">Error: ' + error.message + '</div>';
            }
        }

        // ===== CLAIM TOKEN FUNCTION =====
       async function claimToken(tokenAccountAddress, recoverableSOL) {
    if (!currentWallet) {
        showNotification('‚ùå Please connect your wallet first!', 'error');
        return;
    }
    
    if (!hasMinimumBalance()) {
        showNotification(`‚ùå Insufficient balance! You have: ${userBalance.toFixed(6)} SOL - Minimum: 0.002 SOL`, 'error');
        return;
    }
    
    try {
        const transactionResult = await realRecoverRent(tokenAccountAddress, recoverableSOL);
        
        if (transactionResult.success) {
            // ‚úÖ NOTIFICATION √âL√âGANTE AU LIEU DE ALERT()
            showNotification(`üéâ Recovery successful! You received ${transactionResult.userAmount.toFixed(4)} SOL`, 'success');
            
            // Supprimer le token de l'interface
            const tokenElement = document.querySelector(`[onclick*="${tokenAccountAddress}"]`);
            if (tokenElement) {
                tokenElement.closest('.token-item').remove();
            }
            
            // Mettre √† jour le compteur
            const tokensCount = document.querySelectorAll('.token-item').length;
            if (tokensCount === 0) {
                document.getElementById('tokensContainer').innerHTML = '<div style="text-align: center; padding: 20px;">üéâ All tokens recovered!</div>';
            }
            
            const txData = {
                txId: transactionResult.signature,
                account: tokenAccountAddress,
                userReceived: transactionResult.userAmount,
                timestamp: new Date().toISOString(),
                verified: backendOnline
            };

            saveTransaction(txData);
            
            try {
                await backendService.addGlobalTransaction({
                    txId: transactionResult.signature,
                    userReceived: transactionResult.userAmount,
                    userWallet: userWalletAddress.substring(0, 8) + '...',
                });
                
                loadGlobalTransactions();
                updateRealStats();
            } catch (globalError) {
                console.log('Global save error:', globalError);
            }
            
            loadTransactionHistory();
            userBalance = await getCurrentBalance();
            showBalanceWarning();
            
            setTimeout(() => scanTokens(), 2000);
            
        } else {
            throw new Error(transactionResult.error);
        }
        
    } catch (error) {
        console.error('Claim error:', error);
        showNotification('‚ùå Error: ' + error.message, 'error');
    }
}

        // ===== CORRECTED RECOVERY FUNCTION =====
        async function realRecoverRent(tokenAccountAddress, recoverableSOL) {
            try {
                console.log("üöÄ 100% USER RECOVERY - WORKING");
                
                const userPublicKey = new solanaWeb3.PublicKey(userWalletAddress);
                const tokenPublicKey = new solanaWeb3.PublicKey(tokenAccountAddress);

                const totalLamports = Math.floor(recoverableSOL * 1000000000);

                const transaction = new solanaWeb3.Transaction();

                const closeInstruction = new solanaWeb3.TransactionInstruction({
                    keys: [
                        { pubkey: tokenPublicKey, isSigner: false, isWritable: true },
                        { pubkey: userPublicKey, isSigner: false, isWritable: true },
                        { pubkey: userPublicKey, isSigner: true, isWritable: false },
                    ],
                    programId: new solanaWeb3.PublicKey("TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA"),
                    data: new Uint8Array([9])
                });
                transaction.add(closeInstruction);

                const { blockhash } = await connection.getLatestBlockhash();
                transaction.recentBlockhash = blockhash;
                transaction.feePayer = userPublicKey;

                let signature;
                
                // USE CORRECT WALLET BASED ON CONNECTION
                if (currentWallet === 'phantom' && window.solana) {
                    signature = await window.solana.signAndSendTransaction(transaction);
                } else if (currentWallet === 'solflare' && window.solflare) {
                    signature = await window.solflare.signAndSendTransaction(transaction);
                } else if (currentWallet === 'backpack' && window.backpack) {
                    signature = await window.backpack.signAndSendTransaction(transaction);
                } else if (currentWallet === 'glow' && window.glow) {
                    const response = await window.glow.signAndSendTransaction(transaction);
                    signature = response.signature;
                } else {
                    throw new Error('Wallet not available');
                }

                await connection.confirmTransaction(signature, 'confirmed');

                return { 
                    success: true, 
                    signature: signature,
                    userAmount: recoverableSOL
                };

            } catch (error) {
                return { success: false, error: error.message };
            }
        }

        // ===== REAL BALANCE =====
        async function getCurrentBalance() {
            if (!userWalletAddress) return 0;
            
            try {
                const publicKey = new solanaWeb3.PublicKey(userWalletAddress);
                const balance = await connection.getBalance(publicKey);
                return balance / 1000000000;
            } catch (error) {
                console.error('Balance retrieval error:', error);
                return 0;
            }
        }

        function hasMinimumBalance() {
            return userBalance >= 0.002;
        }

        function showBalanceWarning() {
            const warningContainer = document.getElementById('balanceWarningContainer');
            if (hasMinimumBalance()) {
                warningContainer.innerHTML = '';
                return;
            }

            warningContainer.innerHTML = `
                <div class="balance-warning">
                    <h4>${translations[currentLanguage].balanceWarningTitle}</h4>
                    <p>${translations[currentLanguage].balanceWarningText}</p>
                    <p><strong>${currentLanguage === 'en' ? 'Solutions:' : 'Solutions :'}</strong></p>
                    <ul>
                        <li>${translations[currentLanguage].balanceWarningSolution1}</li>
                        <li>${translations[currentLanguage].balanceWarningSolution2}</li>
                        <li>${translations[currentLanguage].balanceWarningSolution3}</li>
                    </ul>
                </div>
            `;
        }

        // ===== DISPLAY TOKENS =====
        function displayTokens(tokens) {
            const tokensContainer = document.getElementById('tokensContainer');
            
            if (tokens.length === 0) {
                tokensContainer.innerHTML = '<div style="text-align: center;">' + translations[currentLanguage].noTokens + '</div>';
                return;
            }
            
            const canClaim = hasMinimumBalance();
            
            tokensContainer.innerHTML = tokens.map(token => `
                <div class="token-item">
                    <div>
                        <strong>${token.mint}</strong><br>
                        <small>Account: ${token.account.substring(0, 12)}...</small><br>
                        <small style="color: var(--primary-color);">Recoverable: ${token.recoverable.toFixed(6)} SOL</small>
                    </div>
                    ${canClaim ? 
                        `<button class="claim-btn" onclick="claimToken('${token.account}', ${token.recoverable})">
                            ${translations[currentLanguage].claimButton} ${token.recoverable.toFixed(4)} SOL
                        </button>` :
                        `<button class="claim-btn" disabled title="${currentLanguage === 'en' ? 'Insufficient SOL balance for network fees' : 'Solde SOL insuffisant pour les frais r√©seau'}">
                            ${translations[currentLanguage].claimDisabled}
                        </button>`
                    }
                </div>
            `).join('');
        }

        // ===== SAVE TRANSACTIONS =====
        function saveTransaction(txData) {
            const transactions = JSON.parse(localStorage.getItem('freesol_transactions') || '[]');
            transactions.unshift(txData);
            localStorage.setItem('freesol_transactions', JSON.stringify(transactions));
        }

        // ===== TRANSACTION HISTORY =====
        function loadTransactionHistory() {
            const transactionsList = document.getElementById('transactionsList');
            const transactions = JSON.parse(localStorage.getItem('freesol_transactions') || '[]');
            
            if (transactions.length === 0) {
                transactionsList.innerHTML = '<div style="text-align: center; opacity: 0.7;">' + translations[currentLanguage].noTransactions + '</div>';
                return;
            }
            
            transactionsList.innerHTML = transactions.map(tx => `
                <div class="tx-item">
                    <div>
                        <strong>${tx.account.substring(0, 12)}...</strong><br>
                        <small>${currentLanguage === 'en' ? 'Received' : 'Re√ßu'}: ${tx.userReceived.toFixed(4)} SOL</small>
                        ${tx.verified ? `<br><small style="color: #00ff88;">‚úÖ Server verified</small>` : ''}
                    </div>
                    <div>
                        <small>${new Date(tx.timestamp).toLocaleDateString()}</small><br>
                        <a href="https://solscan.io/tx/${tx.txId}" target="_blank" class="tx-link">
                            ${translations[currentLanguage].viewTransaction}
                        </a>
                    </div>
                </div>
            `).join('');
        }

        // ===== LANGUAGE CHANGE =====
        function changeLanguage(lang) {
            currentLanguage = lang;
            
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.trim() === lang.toUpperCase()) {
                    btn.classList.add('active');
                }
            });
            
            Object.keys(translations[lang]).forEach(key => {
                const element = document.getElementById(key);
                if (element) {
                    element.textContent = translations[lang][key];
                }
            });
            
            // Update donation section texts
            const donationSection = document.getElementById('donationSection');
            if (donationSection.style.display !== 'none') {
                donationSection.querySelector('h4').textContent = translations[lang].donationTitle;
                donationSection.querySelector('p').textContent = translations[lang].donationText;
                donationSection.querySelector('.donation-btn').textContent = translations[lang].donationButton;
            }
            
            localStorage.setItem('preferredLanguage', lang);
        }

        // ===== DARK MODE FUNCTION =====
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            localStorage.setItem('darkMode', isDarkMode);
            
            const themeBtn = document.getElementById('themeToggle');
            themeBtn.innerHTML = isDarkMode ? translations[currentLanguage].themeBtnLight : translations[currentLanguage].themeBtnDark;
        }

        // ===== WALLET CONNECTION =====
        async function connectWallet(walletType) {
            const walletSelector = document.getElementById('walletSelector');
            const walletStatus = document.getElementById('walletStatus');
            const walletInfo = document.getElementById('walletInfo');
            const txHistory = document.getElementById('txHistory');
            const connectHeaderBtn = document.getElementById('connectHeaderBtn');
            const donationSection = document.getElementById('donationSection');
            
            try {
                if (!walletDetectors[walletType]()) {
                    const errorMsg = isMobile() 
                        ? translations[currentLanguage].connectError + ': ' + walletType + ' - Open the app and return'
                        : translations[currentLanguage].connectError + ': ' + walletType + ' not installed';
                    throw new Error(errorMsg);
                }

                let address = null;
                
                switch (walletType) {
                    case 'phantom':
                        await window.solana.connect();
                        await new Promise(resolve => setTimeout(resolve, 500));
                        address = window.solana.publicKey.toString();
                        break;
                    case 'solflare':
                        await window.solflare.connect();
                        await new Promise(resolve => setTimeout(resolve, 500));
                        address = window.solflare.publicKey.toString();
                        break;
                    case 'backpack':
                        await window.backpack.connect();
                        await new Promise(resolve => setTimeout(resolve, 500));
                        address = window.backpack.publicKey.toString();
                        break;
                    case 'glow':
                        if (window.glow) {
                            const response = await window.glow.request({ method: "connect" });
                            address = response.publicKey;
                        } else {
                            throw new Error('Glow wallet not available');
                        }
                        break;
                    default:
                        throw new Error('Wallet not supported');
                }

                if (!address) {
                    throw new Error('Address not received from wallet');
                }

                userWalletAddress = address;
                currentWallet = walletType;
                userBalance = await getCurrentBalance();

                walletSelector.style.display = 'none';
                walletStatus.style.display = 'block';
                txHistory.style.display = 'block';
                donationSection.style.display = 'block';
                connectHeaderBtn.style.display = 'none';

                walletInfo.innerHTML = `
                    ‚úÖ ${translations[currentLanguage].connected} (${getWalletName(walletType)})<br>
                    <small>${currentLanguage === 'en' ? 'Address' : 'Adresse'}: ${userWalletAddress.substring(0, 12)}...${userWalletAddress.substring(userWalletAddress.length - 6)}</small><br>
                    <small>SOL: ${userBalance.toFixed(6)}</small>
                    <button class="disconnect-btn" onclick="disconnectWallet()">
                        ${translations[currentLanguage].disconnect}
                    </button>
                `;

                showBalanceWarning();
                scanTokens();
                loadTransactionHistory();
                updateRealStats();

            } catch (error) {
                console.error('Connection error:', error);
                showNotification('‚ùå ' + error.message, 'error');
            }
        }

        function getWalletName(walletType) {
            const names = {
                phantom: 'Phantom',
                solflare: 'Solflare',
                backpack: 'Backpack',
                glow: 'Glow'
            };
            return names[walletType] || walletType;
        }

        function showWalletSelector() {
            const walletSelector = document.getElementById('walletSelector');
            walletSelector.style.display = 'block';
            checkWalletsAvailability();
        }

        function disconnectWallet() {
            const walletSelector = document.getElementById('walletSelector');
            const walletStatus = document.getElementById('walletStatus');
            const txHistory = document.getElementById('txHistory');
            const tokensContainer = document.getElementById('tokensContainer');
            const connectHeaderBtn = document.getElementById('connectHeaderBtn');
            const balanceWarning = document.getElementById('balanceWarningContainer');
            const donationSection = document.getElementById('donationSection');

            walletSelector.style.display = 'block';
            walletStatus.style.display = 'none';
            txHistory.style.display = 'none';
            tokensContainer.innerHTML = '';
            donationSection.style.display = 'none';
            connectHeaderBtn.style.display = 'block';
            balanceWarning.innerHTML = '';

            currentWallet = null;
            userWalletAddress = null;
            userBalance = 0;
        }

        function checkWalletsAvailability() {
            const walletButtons = document.querySelectorAll('.wallet-btn');
            walletButtons.forEach(btn => {
                const walletType = btn.onclick.toString().match(/connectWallet\('(.+)'\)/)[1];
                if (!walletDetectors[walletType]()) {
                    btn.style.opacity = '0.5';
                    btn.style.cursor = 'not-allowed';
                    btn.onclick = null;
                    const errorMsg = isMobile() 
                        ? 'Open the wallet app and return' 
                        : translations[currentLanguage].connectError + ': Wallet not installed';
                    btn.title = errorMsg;
                }
            });
        }

        // ===== LOAD PREFERENCES =====
        window.addEventListener('load', function() {
            if (localStorage.getItem('darkMode') === 'true') {
                document.body.classList.add('dark-mode');
                document.getElementById('themeToggle').innerHTML = translations[currentLanguage].themeBtnLight;
            }
            
            const savedLang = localStorage.getItem('preferredLanguage') || 'en';
            changeLanguage(savedLang);
            
            updateRealStats();
            loadGlobalTransactions();
            
            backendOnline = true;

            checkWalletsAvailability();
        });
    </script>
</body>
</html>
